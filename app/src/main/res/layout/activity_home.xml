<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#ddeeff">

    <ImageView
        android:id="@+id/homeImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/homeTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="아이디 : "
        android:bufferType="spannable"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nexon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeImageView" />

    <TextView
        android:id="@+id/homeTextViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="이름 : 손현준"
        android:bufferType="spannable"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nexon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTextViewID" />

    <TextView
        android:id="@+id/homeTextViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="나이 : 26"
        android:bufferType="spannable"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nexon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTextViewName" />

    <TextView
        android:id="@+id/homeTextViewMBTI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="MBTI : INTP"
        android:bufferType="spannable"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nexon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTextViewAge" />

    <TextView
        android:id="@+id/homeTextViewGreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="한 줄 인사 : 잘 부탁드립니다!"
        android:bufferType="spannable"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nexon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTextViewMBTI" />

    <Button
        android:background="@drawable/button_pressed_check"
        android:id="@+id/homeButtonFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:text="종료"
        android:drawableRight="@drawable/icon_pressed"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:drawablePadding="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTextViewGreet" />



</androidx.constraintlayout.widget.ConstraintLayout>